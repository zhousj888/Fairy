var red = Color(hex: "#ff0000")
var blue = Color(hex: "#0000ff")
var yellow = Color(hex: "#fbff00")

class Color {
    var __innerNativeObj
    func init(hex) {
        __innerNativeObj = __Native.createColor(hex: hex)
    }
}

class VStack {
    var __innerNativeObj = __Native.createVStack()

    func init() {
        if _trailing_closure {
            var subviewArr = _trailing_closure()
            var index = 0
            if subviewArr.count {
                repeat {
                    self.addSubview(view: subviewArr[index])
                    index = index + 1
                } while index < subviewArr.count
            }

        }
    }
    func addSubview(view) {
        if view {
            __Native.addArrangedSubview(obj: __innerNativeObj, subview: view)
        }
    }
}

class View {
    var __innerNativeObj = __Native.createInstance(className: "UIView")
    var _width
    var _height
    var _backgroundColor
    func init(width, height, backgroundColor) {
        self._width = width
        self._height = height
        self._backgroundColor = backgroundColor
        self.setColor(color: backgroundColor)
        self.setSize(width: width, height: height)
    }

    func setSize(width, height) {
        if width && height {
            __Native.setViewSize(obj: __innerNativeObj, width: width, height: height)
        }
    }

    func setColor(color) {
        if color {
            __Native.setValue(obj: __innerNativeObj, key:"backgroundColor", value: color)
        }
    }

}

VStack() {
    View(width: 200, height: 100, backgroundColor: red)
    View(width: 200, height: 100, backgroundColor: blue)
    View(width: 100, height: 100, backgroundColor: yellow)
    View()
}
